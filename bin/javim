#!/usr/bin/env ruby
unless respond_to? :require_relative
  def require_relative(o)
    require File.dirname(__FILE__) + "/#{o}"
  end
end
require_relative '../lib/javim'

javafile = ARGV.shift
classfile = ARGV.shift
table =
  if classfile
    if File.directory? classfile
      raise 'not implemented yet'
    else
      Javim.global.merge Javim.local(classfile)
    end
  else
    Javim.global
  end
keywords = Javim.keywords_of javafile
puts keywords.map {|k|
  (table[k] || []).map {|package|
    "import #{package};"
  }
}.flatten
